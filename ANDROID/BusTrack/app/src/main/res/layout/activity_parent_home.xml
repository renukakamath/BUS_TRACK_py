<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/hm"
    tools:context=".Parent_home">

<!--    <TextView-->
<!--        android:id="@+id/textView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Parent Home" />-->


    <!--#####################################################-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bus"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/bus"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/bus" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Bus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_layout"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btdriver"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/contact"
                    app:srcCompat="@drawable/contact" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Contact Details" />
            </LinearLayout>

        </TableRow>

    </LinearLayout>

    <!--    ################################################-->


    <!--#####################################################-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pay"
                    android:layout_width="52dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/cash"
                    app:srcCompat="@drawable/cash" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Payment" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_layout"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnoti"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_notifications_24"
                    app:srcCompat="@drawable/ic_baseline_notifications_24" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Notification" />
            </LinearLayout>

        </TableRow>

    </LinearLayout>

    <!--    ################################################-->


    <!--#####################################################-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btattendance"
                    android:layout_width="52dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_baseline_bookmark_add_24"
                    app:srcCompat="@drawable/ic_baseline_bookmark_add_24" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Attendance" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_layout"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btlogout"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_exit_to_app_24"
                    app:srcCompat="@drawable/ic_baseline_exit_to_app_24" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Logout" />
            </LinearLayout>

        </TableRow>

    </LinearLayout>

    <!--    ################################################-->


</LinearLayout>